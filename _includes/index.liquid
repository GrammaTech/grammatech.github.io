<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    <meta charset="UTF-8">
    <meta name="description" content="GrammaTech Research">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.14.0/css/all.css">
    <link rel="stylesheet" href="{{ "/gt.css" |url }}">
    <link rel="stylesheet" href="{{ "/w3.css" |url }}">
    <link rel="icon" href="{{ "/favicon.ico" |url }}">
  </head>
<body style="color: #bdc1c6; background: #202124; max-width: 1400px; margin: auto;">

<!-- Header -->
<header class="w3-center">
  <!-- Hide right-floated links on small screens and replace them with a menu icon -->
  <a href="javascript:void(0)" class="w3-top w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium" onclick="navbar_toggle()">
    <i class="fa fa-bars w3-right"></i>
  </a>
  <!-- <img class="w3-image" src="{{ "img/rostyslav-savchyn-9XtjVafxMUg-unsplash.jpg"|url }}" alt="GT" width="1500" height="600" style="opacity:0.75;"> -->
  <img class="w3-image" src="{{ "img/israel-andrade-YI_9SivVt_s-unsplash-crop.jpg"|url }}" alt="GT" width="1500" height="400" style="opacity:0.75;">
  <div class="w3-hide-medium w3-hide-small w3-padding-large w3-border w3-border-dark-grey w3-wide w3-text-light-grey w3-center"
       style="background-color: rgb(110,124,146, 0.6); position:absolute;left:50%;top:12.5%;transform:translate(-50%,-25%);-ms-transform:translate(-50%,-25%)">
    <h1 class="w3-jumbo" style="margin-top:0.5em;margin-bottom:0.5em;">GrammaTech</h1>
    <h3 class="w3-xxlarge" style="color:#f1f1f1;margin-bottom:0.5em;margin-top:0.5em;">Research</h3>
  </div>
  <div class="w3-hide-large w3-padding w3-border w3-border-dark-grey w3-wide w3-text-light-grey w3-center"
       style="background-color: rgb(110,124,146, 0.6);position:absolute;left:50%;top:4.5em;transform:translate(-50%,-50%);-ms-transform:translate(-50%,-50%)">
    <h1 style="margin-top:0">GrammaTech</h1>
    <h3 style="color:#f1f1f1;margin-bottom:0;">Research</h3>
  </div>
  
  <!-- Navbar (placed at the bottom of the header image) -->
  <div class="w3-bar w3-dark-grey w3-round w3-hide-small gt-scootch-up">
    {% for anchor in anchors %}
    <a href="#{{ anchor.slug }}" class="w3-bar-item w3-button">{{ anchor.text }}</a>
    {% endfor %}
  </div>

  <!-- Navbar on small screens -->
  <div id="navDemo" class="w3-bar-block w3-dark-grey w3-hide w3-hide-large w3-hide-medium w3-top w3-card">
    <a href="#" class="w3-bar-item w3-button" onclick="navbar_toggle()">Home</a>
    {% for anchor in anchors %}
    <a href="#{{ anchor.slug }}" class="w3-bar-item w3-button" onclick="navbar_toggle()">{{ anchor.text }}</a>
    {% endfor %}
  </div>
</header>

<!-- Page content -->
<div class="w3-margin-top">
  <div class="w3-container">
    {{ content | safe }}
  </div>
  {% include bottom %}
</body>
<script>
  // Used to toggle the menu on small screens when clicking on the menu button
  function navbar_toggle() {
      var x = document.getElementById("navDemo");
      if (x.className.indexOf("w3-show") == -1) {
          x.className += " w3-show";
      } else {
          x.className = x.className.replace(" w3-show", "");
      }
  }
  function navbar_hide() {
      var x = document.getElementById("navDemo");
      if (x.className.indexOf("w3-show") != -1) {
          x.className = x.className.replace(" w3-show", "");
      }
  }

  area_projects = {
    {% for ra in collections.ra %}
    {% if ra.data.slug %}
    {% if ra.data.prjs %}
    "{{ ra.data.slug }}": [
      {% for prj in ra.data.prjs %}
      "{{ prj.name }}",
      {% endfor %}
    ],
    {% endif %}
    {% endif %}
    {% endfor %}
  }

  project_areas = {}
  Object.values(area_projects).reduce((a, b) => a.concat(b)).forEach((prj) => {
    project_areas[prj] = Object.keys(area_projects).filter((key) => area_projects[key].includes(prj))
  })

  function cell_highlight(cell, area){
    cell.addEventListener("mouseover",(event) => {
      document.getElementById(area).classList.add("gt-highlight");
    })
    cell.addEventListener("mouseout",(event) => {
      document.getElementById(area).classList.remove("gt-highlight");
    })
  }

  // RA highlight in use-case table
  var uc_table = document.getElementById("use-case-table").children[1];
  for (var i = 0, row; row = uc_table.rows[i]; i++) {
    for (var j = 0, cell; cell = row.cells[j]; j++) {
      var contents = cell.innerHTML.toLowerCase();
      for (var k = 0, prj; prj = Object.keys(project_areas)[k]; k++) {
        if ( contents.includes(prj.toLowerCase()) ){
          var area = project_areas[prj];
          cell.classList.add("gt-area-cell-"+area);
          cell_highlight(cell, area);
        }
      }
    }
  }
</script>
{% include bottom-js %}
</html>
